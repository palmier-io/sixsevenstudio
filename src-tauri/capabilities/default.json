{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-confirm",
    "log:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/sixsevenstudio/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME/sixsevenstudio/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/sixsevenstudio/**" }
      ]
    }
  ]
}